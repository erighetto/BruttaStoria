{# app/Resources/views/security/reset.password.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Resetta la tua password{% endblock %}

{% block body %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}

{% endblock %}

{% block script %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.serializeJSON/2.7.2/jquery.serializejson.js"></script>
    <script>
        $(document).ready(function () {
            $("#form_reset").click(function (e) {
                var MyForm = $('form[name="form"]').serializeJSON();
                console.log(MyForm);
                $.ajax(
                    {
                        url: $(this).attr('action'),
                        type: "POST",
                        data: {valArray: MyForm},
                        success: function (maindata) {

                            alert(maindata);

                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                        }
                    });
                e.preventDefault(); //STOP default action

            });
        });
    </script>
{% endblock %}