{% extends 'base.html.twig' %}

{% block body %}
    <h1>Il tuo profilo</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Username</th>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ user.name }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Website</th>
            <td>{{ user.website }}</td>
        </tr>
        <tr>
            <th>Origin</th>
            <td>{{ user.origin }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>{{ user.image }}</td>
        </tr>
        <tr>
            <th>Bio</th>
            <td>{{ user.bio }}</td>
        </tr>
        <tr>
            <th>Timezone</th>
            <td>{{ user.timezone }}</td>
        </tr>
        <tr>
            <th>Profilo Attivo</th>
            <td>{% if user.status %}Yes{% else %}No{% endif %}</td>
        </tr>
        <tr>
            <th>Aggiornato</th>
            <td>{% if user.updated %}{{ user.updated|date('d-m-Y H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Creato</th>
            <td>{% if user.created %}{{ user.created|date('d-m-Y H:i:s') }}{% endif %}</td>
        </tr>
        </tbody>
    </table>

    <ul class="list-inline functional_footer_menu">
        <li>
            <a href="{{ path('backend_profile_edit') }}" class="btn btn-warning">Edit</a>
        </li>
    </ul>
{% endblock %}
