{% extends 'base.html.twig' %}

{% block body %}
    <h1>Definitions list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(definitions, 'Id', 'd.id' )|raw }}</th>
                <th>Nodeid</th>
                <th>{{ knp_pagination_sortable(definitions, 'UserId', 'd.userId' )|raw }}</th>
                <th>Body</th>
                <th>ExtraInfo</th>
                <th>{{ knp_pagination_sortable(definitions, 'Status', 'd.status' )|raw }}</th>
                <th>{{ knp_pagination_sortable(definitions, 'Poll', 'd.poll' )|raw }}</th>
                <th>Updated</th>
                <th>{{ knp_pagination_sortable(definitions, 'Created', 'd.created' )|raw }}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for definition in definitions %}
            <tr>
                <td><a href="{{ path('definition_show', { 'id': definition.id }) }}">{{ definition.id }}</a></td>
                <td>{{ definition.nodeId }}</td>
                <td><a href="{{ path('user_show', { 'id': definition.userId }) }}" target="_blank">{{ definition.userId }}</a></td>
                <td>{{ definition.body|raw }}</td>
                <td>{{ definition.extraInfo|raw }}</td>
                <td>{% if definition.status %}Yes{% else %}No{% endif %}</td>
                <td>{{ definition.poll }}</td>
                <td>{% if definition.updated %}{{ definition.updated|date('d-m-Y H:i:s') }}{% endif %}</td>
                <td>{% if definition.created %}{{ definition.created|date('d-m-Y H:i:s') }}{% endif %}</td>
                <td>
                    <ul class="list-inline">
                        <li>
                            <a href="{{ path('definition_show', { 'id': definition.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('definition_edit', { 'id': definition.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(definitions) }}
    </div>

    <ul class="list-inline functional_footer_menu">
        <li>
            <a href="{{ path('definition_new') }}" class="btn btn-success">Create a new definition</a>
        </li>
    </ul>
{% endblock %}
